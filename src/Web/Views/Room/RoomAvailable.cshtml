@model IEnumerable<HotelBooking.Core.Dtos.RoomDto>

@{
    ViewData["Title"] = "Room Available";
}

<!--================Banner Area =================-->
<section class="banner_area">
    <div class="booking_table d_flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>Welcome in Royal Hotel</h2>
                <h4>Please enter your arrival and departure date</h4>
                <h4>We are happy to join us</h4>
            </div>
        </div>
    </div>
    <div class="hotel_booking_area position">
        <div class="container">
            <form asp-controller="Room" asp-action="RoomAvailable" method="get">
                <div class="hotel_booking_table">
                    <div class="col-md-5">
                        <h3>Please enter your arrival and departure date</h3>
                    </div>
                    <div class="col-md-9">
                        <div class="boking_table">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="book_tabel_item">
                                        <div class="form-group">
                                            <label>Arrival Date</label><br />

                                            <div class='input-group date'>
                                                <input name="from" type="date" class="form-control" placeholder="Arrival Date" required />
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <button type="submit" class="book_now_btn button_hover">Search</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="book_tabel_item">
                                        <div class="form-group">
                                            <label>Depature date</label><br />

                                            <div class='input-group date'>
                                                <input name="to" type="date" class="form-control" placeholder="Depature date" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!--================Banner Area =================-->
@if (Model != null)
{
    <!--================ Latest Blog Area  =================-->
<section class="latest_blog_area section_gap">
        <div class="container">
            <div class="section_title text-center">
                <h2 class="title_color">latest posts from blog</h2>
                <p>The French Revolution constituted for the conscience of the dominant aristocratic class a fall from </p>
            </div>
            <div class="row mb_30">

                @foreach (var r in Model)
                {
                    <div class="col-lg-4 col-md-4">
                        <div class="single-recent-blog-post">
                            <div class="thumb">
                                <img class="img-fluid" src="~/site/image/blog/blog-1.jpg" alt="post">
                            </div>
                            <div class="details">
                                <h4 class="sec_h4">@r.RoomName</h4>
                                <h5 class="sec_h4">@r.RoomType</h5>
                                <p>@r.View</p>
                                <h6 class="date title_color">$ @r.Price</h6>
                                <div class="tags">
                                    <a href="#" class="button_hover tag_btn">Booking Room</a>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section> <!--================ Recent Area  =================-->
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
